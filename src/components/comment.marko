import type { Comment } from "#src/api";
export interface Input {
  comment: Comment;
}

$ const { comment } = input;

<li class="comment">
  <div class="by">
    <a href=`/user/${comment.user}`>
      ${comment.user}
    </a>
    ${` ${comment.time_ago}`}
  </div>

  <div class="text">
    $!{comment.content}
  </div>

  <if(comment.comments.length)>
    <toggle>
      <for|nested| of=comment.comments>
        <comment comment=nested/>
      </for>
    </toggle>
  </if>
</li>
